Import('env')

libgccvb_src = env.Glob('./libgccvb/*.c')
libgccvb_obj = env.Object(libgccvb_src)
libgccvb = env.Library('./libgccvb/libgccvb', libgccvb_obj)
env.Append(LIBPATH = [Dir('./libgccvb/')])
env.Append(LIBS = ['libgccvb'])


if 'external' in COMMAND_LINE_TARGETS:
	print "If -c specified, will clean external (submodule) object files."
	#env.Clean(libgccvb, [libgccvb, libgccvb_obj])
else:
	env.NoClean([libgccvb, libgccvb_obj]) #Don't clean the final library output/object files.

Export('env', 'libgccvb')
